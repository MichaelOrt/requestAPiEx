<%- include ('templates/header'); -%>

<div class='container'>
    <div class='jumbotron'>
        <h1> SEARCH RESULTS </h1>
        <button class='btn btn-info' onclick='location.href="/";'>Search Again</button>
    </div>

    <ul id='movies-list'>
       <% Object.keys(data).forEach(function(key){%>
	        <li> 
	            <img class='poster' src=<%=data[key].cover.medium%> />
	            <div>
                    <h5><%=data[key].title%></h5>
                    <p><%=data[key].authors.name%></p>
                     <p>Pages: <%=data[key].number_of_pages%></p>
                    <p><%=key%></p>
                    <p>Publisher: <%=data[key].publishers[0].name%></p>
                    <p>Publish Date: <%=data[key].publish_date%></p>
                </div>
	        </li>	
        <% }); %>
    <ul>
</div>

<%- include ('templates/footer'); -%>